<section class="auth-container">
    <h1>Welcome</h1>
    <p>Enter your provided login credentials.</p>
    <form id="login-form" class="form" action="/login" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="text" name="username" placeholder="Email or Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/register">Register here</a></p>
</section>

<!-- Error Modal -->
<div id="errorModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-button" onclick="closeModal()">&times;</span>
        <p>Account not found. Click the link below to register.</p>
        <a href="/register">Register</a>
    </div>
</div>

<!-- Auth Modal for Protected Pages -->
<div id="authModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-button" onclick="closeModal()">&times;</span>
        <p>Unfortunately, you cannot access other pages without logging in with valid credentials.</p>
        <p>If you have not signed up, use the link below to register and create an account before accessing the site.</p>
        <a href="/register">Register</a>
    </div>
</div>

